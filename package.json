{
  "name": "stop-action-filter",
  "version": "1.0.0",
  "description": "Stop GitHub Action if filter criteria met",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest --collect-coverage",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chocrates/stop-action-filter.git"
  },
  "author": "Chris McIntosh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Chocrates/stop-action-filter/issues"
  },
  "homepage": "https://github.com/Chocrates/stop-action-filter#readme",
  "devDependencies": {
    "@chocrates/octomock": "^1.1.1",
    "@types/bent": "^7.0.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.7.12",
    "@types/pegjs": "^0.10.1",
    "@typescript-eslint/parser": "^2.8.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "husky": "^4.2.1",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "js-yaml": "^3.13.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "@actions/core": "^1.2.3",
    "@actions/github": "^2.1.1",
    "bent": "^7.1.1",
    "pegjs": "^0.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.ts": "prettier --write"
  }
}
